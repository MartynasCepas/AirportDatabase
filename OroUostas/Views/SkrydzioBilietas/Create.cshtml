@model OroUostas.ViewModels.SkrydzioBilietasEditViewModel

@{
    ViewBag.Title = "Naujas Skrydzio Bilietas";
}

<h2>Naujas Skrydzio Bilietas</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sukurti Nauja Skrydzio Bilieta</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.fk_bilietas, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.fk_bilietas, Model.BilietasList, "-----------", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_bilietas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fk_skrydis, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.fk_skrydis, Model.SkrydisList, "-----------", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_skrydis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Išsaugoti" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Atgal į sąrašą »", "Index", "SkrydzioBilietas", new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}