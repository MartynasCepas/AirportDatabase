@model OroUostas.ViewModels.BilietasEditViewModel

@{
    ViewBag.Title = "Istrinti bilieta";
}

<h2>Bilieto šalinimas</h2>

<h3>Ar tikrai norite pašalinti Bilieta?</h3>
<div>
    <h4>Bilieto šalinimas</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.kaina)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kaina)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fk_klientas)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fk_klientas)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (ViewBag.naudojama !=null)
            {
                <h5>ViewBag.naudojama</h5>
            }
            else
            {
                <input type="submit" value="Šalinti" class="btn btn-danger" />
            }
            @Html.ActionLink("Atgal į sąrašą", "Index", "Modelis", new { @class="btn btn-default"})
        </div>
    }
</div>