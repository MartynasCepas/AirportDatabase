@model IEnumerable<OroUostas.ViewModels.BilietasViewModel>

@{
    ViewBag.Title = "Bilietai";
}

<h2>Bilietai</h2>

<p>
    @Html.ActionLink("Naujas bilietas", "Create", "Bilietas", new { @class = "btn btn-success" })
</p>
<table class="table table-striped datatable">
    <thead>
    <tr style="background-color: lightblue">
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kaina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.savininkas)
        </th>
        <th style="width: 18%"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kaina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.savininkas)
            </td>
            <td>
                @Html.ActionLink("Redaguoti", "Edit", new { id = item.id }, new { @class= "btn btn-primary action" }) 
                @Html.ActionLink("Šalinti", "Delete", new { id = item.id }, new { @class= "btn btn-danger action" })
            </td>
        </tr>
    }
    </tbody>

</table>